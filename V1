G2L["2"].Position = UDim2.new(0.5,0,0.5,0)
G2L["2"].Size = UDim2.new(0.15,0,0.15,0)
G2L["2"].GroupTransparency = 1 -- fade initial

-- Fade orange en fond
G2L["10"] = Instance.new("Frame", G2L["2"])
