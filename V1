G2L["6"].ZIndex = 101

-- Fonction pour créer dynamiquement les items (AutoFarm, Timer, FPS)
function G2L.createItem(parent, text)
    local frame = Instance.new("Frame", parent)
    frame.Name = "ItemContainer"
    frame.BackgroundTransparency = 1
    frame.Size = UDim2.new(1,0,0,18)

    local padding = Instance.new("UIPadding", frame)
    padding.PaddingLeft = UDim.new(0,12)

    local layout = Instance.new("UIListLayout", frame)
    layout.FillDirection = Enum.FillDirection.Horizontal
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Left
    layout.VerticalAlignment = Enum.VerticalAlignment.Center
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Padding = UDim.new(0,6)

    local icon = Instance.new("ImageLabel", frame)
    icon.Image = "rbxassetid://102491222550140"
    icon.ImageColor3 = Color3.fromRGB(230,135,20)
    icon.BackgroundTransparency = 1
    icon.Size = UDim2.new(0,18,0,18)
    icon.ScaleType = Enum.ScaleType.Fit

    local label = Instance.new("TextLabel", frame)
    label.Name = "Item"
    label.BackgroundTransparency = 1
    label.Size = UDim2.new(1,0,1,0)
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255,255,255)
    label.TextScaled = true
    label.TextXAlignment = Enum.TextXAlignment.Left
    return label
end

-- Fade fonction
function G2L.Fade(object, goal, time)
    local t=0
    local start = object.GroupTransparency
    while t<time do
        task.wait()
        t+=task.wait()
        object.GroupTransparency = start + (goal-start)*(t/time)
    end
    object.GroupTransparency = goal
end

-- Fade in initial
task.spawn(function()
    G2L.Fade(G2L["2"],0,0.45)
end)

_G.FadeOutDebugFrame = function()
    G2L.Fade(G2L["2"],1,0.45)
end

-- ====================
-- Draggable GUI
-- ====================
local UIS = game:GetService("UserInputService")
local dragging = false
local dragInput, mousePos, framePos

local function update(input)
    local delta = input.Position - mousePos
    G2L["2"].Position = UDim2.new(
        0.5, framePos.X.Offset + delta.X,
        0.5, framePos.Y.Offset + delta.Y
    )
end

G2L["2"].InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        mousePos = input.Position
        framePos = G2L["2"].Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

G2L["2"].InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

return G2L
